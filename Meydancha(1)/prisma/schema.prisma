// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  password            String
  name                String
  phoneNumber         String    // Required phone number
  role                String    @default("PLAYER") // PLAYER, OWNER, ADMIN
  approved            Boolean   @default(true) // For OWNER: requires admin approval
  idVerificationPhoto String?   // Base64 encoded image or file path
  idVerificationStatus String   @default("PENDING") // PENDING, APPROVED, REJECTED (for OWNER only)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relations
  fields        Field[]
  bookings      Booking[]
  reviews       Review[]
  complaints    Complaint[]
  
  @@index([role, approved])
  @@index([role, idVerificationStatus])
}

model Field {
  id            String    @id @default(cuid())
  name          String
  sportType     String    // football, basketball, padel, tennis
  city          String
  address       String
  pricePerHour  Float
  ratingAvg     Float     @default(0)
  ratingCount   Int       @default(0)
  workingHours  String?   // JSON string with weekly schedule: {"monday": {"open": "08:00", "close": "22:00", "enabled": true}, ...}
  media         String?   // JSON string: [{"type": "image"|"video", "data": "base64..."}, ...]
  ownerId       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  bookings      Booking[]
  reviews       Review[]
  
  @@index([sportType])
  @@index([city])
  @@index([ownerId])
}

model Booking {
  id            String    @id @default(cuid())
  fieldId       String
  userId        String
  date          DateTime
  startTime     String    // Format: "HH:mm"
  endTime       String    // Format: "HH:mm"
  totalPrice    Float
  status        String    @default("CONFIRMED") // CONFIRMED, CANCELLED
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  field         Field         @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  reminderLogs  ReminderLog[]
  
  @@index([fieldId])
  @@index([userId])
  @@index([date])
}

model Review {
  id            String    @id @default(cuid())
  fieldId       String
  userId        String
  rating        Int       // 1-5
  comment       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  field         Field     @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([fieldId, userId])
  @@index([fieldId])
  @@index([userId])
}

model ReminderLog {
  id            String    @id @default(cuid())
  bookingId     String
  emailSent     Boolean   @default(false)
  smsSent       Boolean   @default(false)
  sentAt        DateTime  @default(now())
  
  // Relations
  booking       Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  @@index([bookingId])
}

model Complaint {
  id            String    @id @default(cuid())
  userId        String
  title         String
  description   String
  status        String    @default("PENDING") // PENDING, RESOLVED, DISMISSED
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
}

model Campaign {
  id            String    @id @default(cuid())
  title         String
  description   String
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([isActive])
}
